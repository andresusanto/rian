{
	"extends": "@marais/tsconfig",
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"target": "esnext",
		"module": "nodenext",
		"declaration": false,
		"removeComments": false,
		"lib": ["esnext", "dom.iterable", "webworker"],
		"paths": {
			"rian": ["./packages/rian/src/index.ts"],
			"rian/*": ["./packages/rian/src/*"]
		}
	},
	"include": ["bin/*", "packages/rian/src", "packages/rian/test"],
	"exclude": ["node_modules"]
}

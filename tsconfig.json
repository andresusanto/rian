{
	"extends": "@marais/tsconfig",
	"compilerOptions": {
		"target": "esnext",
		"declaration": false,
		"removeComments": false,
		"lib": ["esnext", "dom.iterable", "webworker"],
		"paths": {
			"rian": ["./packages/rian/src/index.ts"],
			"rian/package.json": ["./packages/rian/package.json"],
			"rian/*": ["./packages/rian/src/*"]
		}
	},
	"include": [
		"bin/*",
		"packages/rian/src",
		"packages/rian/test",
		"examples/*/**"
	],
	"exclude": ["node_modules"]
}
